<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nec.staffApp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:name="com.nec.staffApp.MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/nec_alumni"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.nec.staffApp.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.nec.staffApp.ScanActivity"
            android:label="@string/lbl_scan_activity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.nec.staffApp.TicketResultActivity"
            android:label="@string/title_activity_ticket"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait"/>
        <activity android:name="com.nec.staffApp.Results"
            android:screenOrientation="portrait"/>
        <activity android:name="com.nec.staffApp.Main2Activity"
            android:screenOrientation="portrait"></activity>
        <activity android:name="com.nec.staffApp.Listall"
            android:screenOrientation="portrait"/>
        <activity android:name="com.nec.staffApp.Main3Activity"
            android:screenOrientation="portrait"></activity>
        <activity android:name="com.nec.staffApp.LoginActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.nec.staffApp.Main4Activity"
            android:screenOrientation="portrait"></activity>
        <activity android:name="com.nec.staffApp.SearchActivity"
            android:screenOrientation="portrait"></activity>
    </application>

</manifest>